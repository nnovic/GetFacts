<UserControl x:Class="Brushes.BrushPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Brushes"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Initialized="UserControl_Initialized">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Grid>
                <Label x:Name="BrushName" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" MouseLeftButtonUp="BrushName_MouseLeftButtonUp" >BRUSH NAME</Label>
                <ComboBox x:Name="BrushSelection" SelectionChanged="BrushSelection_SelectionChanged" ></ComboBox>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
