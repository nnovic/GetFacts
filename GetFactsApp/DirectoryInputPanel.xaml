<UserControl x:Class="GetFacts.DirectoryInputPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GetFacts"
             mc:Ignorable="d" 
             d:DesignHeight="29.647" d:DesignWidth="327.529">
    <Grid >

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <Label Grid.Column="0" x:Name="LabelForCaption">[Caption]:</Label>
        <TextBox Grid.Column="1" x:Name="FullPath" VerticalContentAlignment="Center" IsReadOnly="True" >[path]</TextBox>
        <Button Grid.Column="2" x:Name="Resetbutton">X</Button>
        <Button Grid.Column="3" x:Name="OpenButton" Click="OpenButton_Click">Open</Button>
        <Button Grid.Column="4" x:Name="BrowseButton">Change</Button>
    </Grid>
</UserControl>
