<UserControl x:Name="root" x:Class="GetFacts.ConfigurationPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GetFacts"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="Root_Loaded">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListView x:Name="ListOfConfigItems"></ListView>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button x:Name="SaveAndRestartButton" Click="SaveAndRestartButton_Click">Save and restart</Button>
            <Button x:Name="AddPageButton" Click="AddPageButton_Click" >Add</Button>
        </StackPanel>
        
        <StackPanel Grid.Column="1" VerticalAlignment="Bottom">
            
        </StackPanel>

    </Grid>
</UserControl>
