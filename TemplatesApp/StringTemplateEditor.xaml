<UserControl x:Class="TemplatesApp.StringTemplateEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TemplatesApp"
             xmlns:getfacts="clr-namespace:GetFacts;assembly=GetFacts"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock>XPath =</TextBlock>
        <getfacts:XPathTextBox Grid.Column="1" x:Name="XPathInput" TextChanged="XPathInput_TextChanged" />
        
        <TextBlock Grid.Row="1">Regex =</TextBlock>
        <getfacts:RegexTextBox Grid.Row="1" Grid.Column="1" x:Name="RegexInput" TextChanged="RegexInput_TextChanged" />

    </Grid>
</UserControl>
