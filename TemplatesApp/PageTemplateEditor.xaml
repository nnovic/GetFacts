<UserControl x:Class="TemplatesApp.PageTemplateEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TemplatesApp"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border CornerRadius="10" Background="#FFD68D8D">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock>PageName:</TextBlock>
            <TextBox Grid.Column="1">(write name here)</TextBox>

            <TextBlock Grid.Row="1">Page type:</TextBlock>
            <ComboBox Grid.Row="1" Grid.Column="1" SelectedIndex="0">
                <ComboBoxItem>Html</ComboBoxItem>
            </ComboBox>
            
            <TextBlock Grid.Row="2">Reference:</TextBlock>
            <TextBox Grid.Row="2" Grid.Column="1">(write url here)</TextBox>

            <TextBlock Grid.Row="3">Charset:</TextBlock>
            <ComboBox Grid.Row="3" Grid.Column="1" SelectedIndex="0">
                <ComboBoxItem>UTF-8</ComboBoxItem>
            </ComboBox>

            <TextBlock Grid.Row="4">Title template:</TextBlock>
            <local:StringTemplateEditor Grid.Row="4" Grid.Column="1"></local:StringTemplateEditor>

            <TextBlock Grid.Row="5">Text template:</TextBlock>
            <local:StringTemplateEditor Grid.Row="5" Grid.Column="1"></local:StringTemplateEditor>
            
            <TextBlock Grid.Row="6">Icon URL template:</TextBlock>
            <local:StringTemplateEditor Grid.Row="6" Grid.Column="1"></local:StringTemplateEditor>
            
            <TextBlock Grid.Row="7">Media URL template:</TextBlock>
            <local:StringTemplateEditor Grid.Row="7" Grid.Column="1"></local:StringTemplateEditor>

            <StackPanel Grid.Row="8" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="AddSectionButton" Click="AddSectionButton_Click">add section</Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
