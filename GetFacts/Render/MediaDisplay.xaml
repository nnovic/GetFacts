<UserControl x:Class="GetFacts.Render.MediaDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GetFacts.Render"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Initialized="UserControl_Initialized">
    <Grid>
        <Image Margin="5" x:Name="articleIcon" Source="pack://siteoforigin:,,,/Render/DefaultIcon.jpg"  />
        <MediaElement Margin="5" x:Name="articleMedia" Visibility="Hidden" />
        <StackPanel x:Name="progressContainer" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="5,5,5,5">
            <Border  Background="White" Opacity="0.5" CornerRadius="5">
                <Border.Effect>
                    <DropShadowEffect/>
                </Border.Effect>
                <TextBlock Margin="3" x:Name="progressValue" >100%</TextBlock>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
